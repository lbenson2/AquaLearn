@model AquaLearn.Domain.Models.User

<style>
  import url('https://fonts.googleapis.com/css?family=Fredoka+One');
</style>

<div>
  <h1 style="font-family:'Fredoka One', cursive;">Student Login</h1>
  @using (Html.BeginForm("validation", "user"))
  {
    @Html.LabelFor(u => u.Username, "Enter your name")<br />
    @Html.TextBoxFor(u => u.Username)<br />

    @Html.LabelFor(u => u.Password, "Enter your password")<br />
    @Html.TextBoxFor(u => u.Password)<br />

    <button type="submit">Submit</button>
  }
</div>

