@using ald = AquaLearn.Domain.Models;
@using avm = AquaLearn.MVCClient.ViewModels;
@model AquaLearn.MVCClient.Models.UserModel;

@using (@Html.BeginForm("RegisterStudent", "User"))
{
    @Html.LabelFor(m => m.Username, "Username")
    @Html.TextBoxFor(m => m.Username)

    @Html.LabelFor(m => m.Password, "Password")
    @Html.PasswordFor(m => m.Password)

    <h2>Choose your instructors classroom: </h2>

    foreach (var cla in avm.ClassroomViewModel.GetClassrooms())
    {
        @Html.RadioButtonFor(m => m.ClassroomId, cla.ClassroomId)
        @Html.LabelFor(m => m.ClassroomId, cla.Name);
        <br />
    }

    <div class="regbutton">
        <button type="submit" class="buttons" id="regbutton">Register</button>
    </div>
}